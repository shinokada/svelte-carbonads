{
  "name": "svelte-carbonads",
  "version": "2.0.0",
  "description": "Cabonads component for Svelte.",
  "license": "MIT",
  "homepage": "https://svelte-carbonads.codewithshin.com/",
  "author": {
    "name": "Shinichi Okada",
    "url": "https://codewithshin.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shinokada/svelte-carbonads.git"
  },
  "bugs": "https://github.com/shinokada/svelte-carbonads/issues",
  "keywords": [
    "svelte",
    "runes",
    "sveltekit",
    "ui"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "package": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "test": "pnpm test:unit -- --run && pnpm test:e2e",
    "test:e2e": "playwright test",
    "gen:exports": "svelte-lib-helpers exports",
    "gen:docs": "svelte-lib-helpers docs",
    "copy:packagejson": "svelte-lib-helpers package",
    "gen:docs5FromType": "svelte-lib-helpers docs5FromType",
    "lib-helpers": "pnpm gen:docs && pnpm gen:exports && pnpm package && pnpm copy:packagejson",
    "ch": "npx changeset",
    "cv": "npx changeset version",
    "cp": "npx changeset publish"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.23.0",
    "@playwright/test": "^1.51.1",
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.20.2",
    "@sveltejs/package": "^2.3.10",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@svitejs/changesets-changelog-github-compact": "^1.2.0",
    "@tailwindcss/vite": "^4.0.15",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.7",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-svelte": "^3.3.3",
    "globals": "^16.0.0",
    "highlight.js": "^11.11.1",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "publint": "^0.3.9",
    "runatics": "^0.1.4",
    "runes-meta-tags": "^0.4.2",
    "runes-webkit": "^0.9.58",
    "svelte": "^5.25.2",
    "svelte-5-ui-lib": "^0.12.4",
    "svelte-check": "^4.1.5",
    "svelte-lib-helpers": "^0.4.16",
    "svelte-rune-highlight": "^0.5.15",
    "svelte-shields": "^0.5.1",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.15",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.27.0",
    "vite": "^6.2.2",
    "vitest": "^3.0.9"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./Carbonads.svelte": {
      "types": "./dist/Carbonads.svelte.d.ts",
      "svelte": "./dist/Carbonads.svelte"
    },
    "./package.json": "./package.json"
  }
}
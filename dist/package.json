{
	"name": "svelte-carbonads",
	"version": "2.0.1",
	"description": "Cabonads component for Svelte.",
	"license": "MIT",
	"homepage": "https://svelte-carbonads.codewithshin.com/",
	"author": {
		"name": "Shinichi Okada",
		"url": "https://codewithshin.com"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/shinokada/svelte-carbonads.git"
	},
	"bugs": "https://github.com/shinokada/svelte-carbonads/issues",
	"keywords": [
		"svelte",
		"runes",
		"sveltekit",
		"ui"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"package": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "pnpm test:unit -- --run && pnpm test:e2e",
		"test:e2e": "playwright test",
		"gen:exports": "svelte-lib-helpers exports",
		"gen:docs": "svelte-lib-helpers docs",
		"copy:packagejson": "svelte-lib-helpers package",
		"gen:docs5FromType": "svelte-lib-helpers docs5FromType",
		"lib-helpers": "pnpm gen:docs && pnpm gen:exports && pnpm package && pnpm copy:packagejson",
		"ch": "npx changeset",
		"cv": "npx changeset version",
		"cp": "npx changeset publish"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"peerDependencies": {
		"@sveltejs/kit": "^2.0.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.29.5",
		"@eslint/compat": "^1.3.1",
		"@eslint/js": "^9.31.0",
		"@playwright/test": "^1.54.1",
		"@sveltejs/adapter-auto": "^6.1.0",
		"@sveltejs/kit": "^2.25.0",
		"@sveltejs/package": "^2.4.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@svitejs/changesets-changelog-github-compact": "^1.2.0",
		"@tailwindcss/vite": "^4.1.11",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"eslint": "^9.31.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.11.0",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.12.5",
		"globals": "^16.3.0",
		"highlight.js": "^11.11.1",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"publint": "^0.3.12",
		"runatics": "^0.1.4",
		"runes-meta-tags": "^0.4.4",
		"runes-webkit": "^0.11.1",
		"svelte": "^5.36.5",
		"svelte-check": "^4.2.2",
		"svelte-lib-helpers": "^0.4.30",
		"svelte-rune-highlight": "^0.7.1",
		"svelte-shields": "^0.5.1",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.11",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.37.0",
		"vite": "^6.3.5",
		"vitest": "^3.2.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./Carbonads.svelte": {
			"types": "./dist/Carbonads.svelte.d.ts",
			"svelte": "./dist/Carbonads.svelte"
		},
		"./package.json": "./package.json"
	}
}

/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@layer base {
	h1 {
		@apply my-6 text-4xl font-bold dark:text-white;
	}
	h2 {
		@apply my-4 text-3xl font-semibold dark:text-white;
	}
	h3 {
		@apply my-2 text-2xl dark:text-white;
	}
}
@tailwind components;
@tailwind utilities;

{
  "name": "svelte-carbonads",
  "version": "2.0.2",
  "description": "Cabonads component for Svelte.",
  "license": "MIT",
  "homepage": "https://svelte-carbonads.codewithshin.com/",
  "author": {
    "name": "Shinichi Okada",
    "url": "https://codewithshin.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shinokada/svelte-carbonads.git"
  },
  "bugs": "https://github.com/shinokada/svelte-carbonads/issues",
  "keywords": [
    "svelte",
    "runes",
    "sveltekit",
    "ui"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "package": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "test": "pnpm test:unit -- --run && pnpm test:e2e",
    "test:e2e": "playwright test",
    "gen:exports": "svelte-lib-helpers exports",
    "gen:docs": "svelte-lib-helpers docs",
    "copy:packagejson": "svelte-lib-helpers package",
    "gen:docs5FromType": "svelte-lib-helpers docs5FromType",
    "lib-helpers": "pnpm gen:exports && pnpm package && pnpm copy:packagejson",
    "ch": "npx changeset",
    "cv": "npx changeset version",
    "cp": "npx changeset publish"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@eslint/compat": "^2.0.2",
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@sveltejs/adapter-auto": "^7.0.1",
    "@sveltejs/kit": "^2.53.2",
    "@sveltejs/package": "^2.5.7",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@svitejs/changesets-changelog-github-compact": "^1.2.0",
    "@tailwindcss/vite": "^4.2.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.3.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.15.0",
    "flowbite": "^4.0.1",
    "flowbite-svelte": "^1.31.0",
    "globals": "^17.3.0",
    "highlight.js": "^11.11.1",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.5.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "publint": "^0.3.17",
    "runatics": "^0.2.0",
    "runes-meta-tags": "^0.5.0",
    "runes-webkit": "^0.12.1",
    "svelte": "^5.53.5",
    "svelte-check": "^4.4.3",
    "svelte-lib-helpers": "^0.4.31",
    "svelte-rune-highlight": "^0.12.1",
    "svelte-shields": "^0.5.4",
    "tailwind-merge": "^3.5.0",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./Carbonads.svelte": {
      "types": "./dist/Carbonads.svelte.d.ts",
      "svelte": "./dist/Carbonads.svelte"
    },
    "./package.json": "./package.json"
  }
}

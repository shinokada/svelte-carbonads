{
  "name": "svelte-carbonads",
  "version": "2.0.1",
  "description": "Cabonads component for Svelte.",
  "license": "MIT",
  "homepage": "https://svelte-carbonads.codewithshin.com/",
  "author": {
    "name": "Shinichi Okada",
    "url": "https://codewithshin.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shinokada/svelte-carbonads.git"
  },
  "bugs": "https://github.com/shinokada/svelte-carbonads/issues",
  "keywords": [
    "svelte",
    "runes",
    "sveltekit",
    "ui"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "package": "svelte-kit sync && svelte-package && publint",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "test:unit": "vitest",
    "test": "pnpm test:unit -- --run && pnpm test:e2e",
    "test:e2e": "playwright test",
    "gen:exports": "svelte-lib-helpers exports",
    "gen:docs": "svelte-lib-helpers docs",
    "copy:packagejson": "svelte-lib-helpers package",
    "gen:docs5FromType": "svelte-lib-helpers docs5FromType",
    "lib-helpers": "pnpm gen:docs && pnpm gen:exports && pnpm package && pnpm copy:packagejson",
    "ch": "npx changeset",
    "cv": "npx changeset version",
    "cp": "npx changeset publish"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "peerDependencies": {
    "@sveltejs/kit": "^2.0.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@sveltejs/adapter-auto": "^6.1.1",
    "@sveltejs/kit": "^2.45.0",
    "@sveltejs/package": "^2.5.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@svitejs/changesets-changelog-github-compact": "^1.2.0",
    "@tailwindcss/vite": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.8",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "flowbite": "^3.1.2",
    "flowbite-svelte": "^1.17.3",
    "globals": "^16.4.0",
    "highlight.js": "^11.11.1",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "publint": "^0.3.14",
    "runatics": "^0.1.4",
    "runes-meta-tags": "^0.4.5",
    "runes-webkit": "^0.11.4",
    "svelte": "^5.39.9",
    "svelte-check": "^4.3.2",
    "svelte-lib-helpers": "^0.4.31",
    "svelte-rune-highlight": "^0.7.1",
    "svelte-shields": "^0.5.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vite": "^6.3.6",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./Carbonads.svelte": {
      "types": "./dist/Carbonads.svelte.d.ts",
      "svelte": "./dist/Carbonads.svelte"
    },
    "./package.json": "./package.json"
  }
}